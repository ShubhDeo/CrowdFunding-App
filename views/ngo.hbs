<div class="container">
    <h1 class="my-5 text-center">{{ngo.name}}</h1>
    <h5 class="my-5 px-5">{{ngo.body}}</h5>


    <h3 class="text-center my-5">Current Programs</h3>

    <div class="row ">
        {{#each files}}
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card shadow-sm mb-3">
                <img src="/program/image/{{filename}}" alt="img" style="height: 225px; width: 100%">

                <div class="card-body">
                    <h4 class="text-center mb-4">{{metadata.title}}</h4>
                    <p class="card-text">{{truncate metadata.content}}</p>
                </div>

                <div class="btn-group d-flex flex-column ">
                    <button class="btn btn-primary my-2 mx-3"><a href="/program/{{_id}}" class="text-white">Know
                            more</a></button>
                    <button class="btn btn-primary my-2 mx-3"><a href="/payment/{{_id}}"
                            class="text-white">Contribute</a></button>
                </div>

            </div>
        </div>

        {{/each}}
    </div>

</div>

<footer class="pt-4 mt-5  border-top bg-dark text-white">
    <div class="row container-fluid">
        <div class="col-12 col-md">
            <img class="mb-2" src="https://cdn.dribbble.com/users/24966/screenshots/907445/heart.jpg" alt="logo"
                width="24" height="19">
            <small class="d-block mb-3 text-muted">&copy; 2017-2020</small>
        </div>
        <div class="col-6 col-md">
            <h5>Contact Number</h5>
            <ul class="list-unstyled text-small">
                <li>{{ngo.tel}}</li>
            </ul>
        </div>
        <div class="col-6 col-md">
            <h5>Address</h5>
            <ul class="list-unstyled text-small">
                <li>{{ngo.address}}</li>
        </div>
        <div class="col-6 col-md">
            <h5>Email</h5>
            <ul class="list-unstyled text-small">
                <li>{{ngo.email}}</li>
            </ul>
        </div>
    </div>
</footer>