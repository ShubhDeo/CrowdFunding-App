<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                Admin Verify
            </h1>

            <form action='/admin/verify' method="POST">
                <div class="form-group row">
                    <label for="staticTel" class="col-sm-2 col-form-label">Mobile No.</label>
                    <div class="col-sm-10">
                        <input type="text" name="tel" readonly class="form-control-plaintext" id="staticTel"
                            value={{tel}}>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Otp">SMS OTP</label>
                    <input type="text" name="otp" id="otp" class="form-control" placeholder="Enter 6 digit OTP">
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Verify
                </button>
            </form>
        </div>
    </div>
</div>