<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                Admin Register
            </h1>
            {{> error/request-error }}
            <form action="/admin/register" method="POST">

                <div class="form-group">
                    <label for="name">Organisation Name</label>
                    <input type="name" id="name" name="name" class="form-control" required placeholder="Enter Name" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        required />
                </div>
                <div class="form-group">
                    <label for="tel">Mobile Number</label>
                    <input type="text" id="tel" name="tel" class="form-control" placeholder="Add +91 before number" />
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" class="form-control" placeholder="Enter Address"
                        required />
                </div>
                <div class="form-group">
                    <label for="type">Type of Organisation</label>
                    <select id="type" name="type" class="form-control" required>
                        <option value="medical">Medical</option>
                        <option value="education">Education</option>
                        <option value="environment">Environment</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="about">About Organisation</label>
                    <textarea id="body" name="body" class="form-control" placeholder="Atleast 100 words."
                        required></textarea>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create Password" required />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                        placeholder="Confirm Password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Register
                </button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/admin/login">Login</a></p>
        </div>
    </div>
</div>