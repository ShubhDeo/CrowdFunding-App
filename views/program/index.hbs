<div class="container">

    <div>
        <h1 class="text-center my-5">
            {{file.metadata.title}}
        </h1>
        <h5 class="px-5 pb-5">{{file.metadata.content}}</h5>
    </div>
    <img src="/program/image/{{file.filename}}" alt="img" style="height: 500px; width: 100%">
    <div class=" jumbotron my-5">
        <h1 class="display-4"><i class="fas fa-donate"></i> Contribute</h1>
        <p class="lead mb-4">You can contribute to this noble cause and help the community.</p>
        <a class="btn btn-primary btn-lg" href="/payment/{{file._id}}" role="button">Contribute</a>
    </div>



    {{#if payments}}
    <h3 class="mt-3 mb-2 text-center">Current Contributors</h3>
    <table class="my-5 table table-striped ">
        <thead class="thead-dark">
            <tr class="mb-4">
                <th>Name</th>
                <th>Donation</th>
                <th>Date</th>
            </tr>
        </thead>

        <tbody class="tbody-light">
            {{#each payments}}
            <tr>
                <td>{{name}}</td>
                <td>â‚¹ {{amount}}</td>
                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/payment/contribution/{{file._id}}" type="button" class="btn btn-dark btn-block mb-5">View all
        contributions.</a>
    {{else}}
    <div class="text-center my-5">
        <h3 class="text-grey mt-5 mb-3">No Contribution</h3>
        <iframe src="https://giphy.com/embed/TydZAW0DVCbGE" width="480" height="398" frameBorder="0"
            class="giphy-embed"></iframe>
    </div>

    {{/if}}

    <h3>Contact Info :</h3>
    <div class="jumbotron">
        <div class="row">
            <div class="col-xs-12 d-flex justify-content-center" style="width: 50%;">
                <div>
                    <p>NGO </p>
                    <p>Address </p>
                    <p>Email </p>
                    <p>Mobile Number </p>
                </div>
            </div>
            <div class="col-xs-12 d-flex justify-content-center " style="width: 50%;">
                <div>
                    <p>{{ngo.name}}</p>
                    <p>{{ngo.address}}</p>
                    <p>{{ngo.email}}</p>
                    <p>{{ngo.tel}}</p>
                </div>
            </div>
        </div>
    </div>
</div>